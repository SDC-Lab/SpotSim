# the seed to be used for number generation
simulation.seed = 1062348

# the number of simulation rounds
simulation.rounds = 20

# Use the graphical user interface for debugging or not (yes/no)
debug.mode = no

# dump the config file into the log file
simulation.dump_config = yes

# indicates whether the simulation should record the job completion time (yes/no)
job.completion = no

# indicates whether the simulation should record the workload (yes/no)
workload.log = no

# What kind of workload should be used
# static = use files provided for each workload (workload.file)
# lublin99 = use the Lublin-99 workload model
# das2 = use the DAS2 workload model
# grid5000 = grid5000 
workload.type = das2
#workload.path = /home/marcosd/workspace/cloud-sim/workloads/grid5000/2_month_interval/lyon2008_
workload.file = LCG-2005-1-1000.swf

# duration of workload
# 1 month=2592000, 2 months =5184000,  6 months = 15552000
workload.duration = 5184000

# number of generated jobs
workload.jobs = 1000

# the number of CPU per nodes in the original trace file 
workload.node.cpus = 2

# use the workload deadlines (yes/no)
workload.deadline.use = no

# proportion of requests that are deadline constrained
workload.deadline.proportion = 1.0

# are requests persistent? (yes/no)
workload.persistent = yes

# Number of nodes in the cloud
cloud.nodes.number = 2000

# Spot Price method
# history = use the history files
# model = use the statistical model
cloud.spot.price.method = model

# Calibration of the model (yes/no)
cloud.spot.price.model_calibration = no

# cloud region
# us-east
# us-west
# eu-west
# ap-southeast
cloud.region = us-west

# instance os
# linux, windows
cloud.instance.os = linux

# instance type
# m1.small
# c1.medium
# m1.large
# m2.xlarge
# m1.xlarge
# c1.xlarge
# m2.2xlarge
# m2.4xlarge
cloud.instance.type = m1.large

# The start month of price history for spot instances
cloud.spot.price.start_month = 5

# The start year of price history for spot instances
cloud.spot.price.start_year = 2011

# The end month of price history for spot instances
cloud.spot.price.end_month = 6

# The end year of price history for spot instances
cloud.spot.price.end_year = 2011

# number of day from price history to load
cloud.spot.history.day_of_month = 30

# the user bid for spot instances
# 0:  means the on demand price (almost no failure)
# <0: means the input value
cloud.spot.bid = 0

# Number of cores per node in the cloud
cloud.nodes.cores = 1

# Cores rating in MIPS
cloud.cores.mips = 1000

# Cloud Latency to send the config file and input file (seconds)
# 100 MB data over a 10Mbps line --> 80 sec latency
cloud.latency = 80

# The scheduling strategy to be used by the cloud
# will : William's stategy
# simple: simple version 
cloud.strategy = simple

# -----------------------------------------------------
# Information about the prices of resources on the cloud


cloud.instance.price = 0.10

# Price of 10,000 GET requests
cloud.request.get.price = 0.01

# Price of 1,000 PUT, COPY, POST and LIST requests
cloud.request.other.price = 0.01

# Price per GB/month of storage
cloud.storage.month = 0.15

# -----------------------------------------------------
# Parameters for the site's eb-queue-length strategy
# -----------------------------------------------------
# The maximum size of the waiting job's queue
eb.site.queue.size = 1

# -----------------------------------------------------
# Parameters related to VMs  
# -----------------------------------------------------
# The number of VM images the users can select from
images.number = 10

# The size of each VM image in MBs 
images.size = 4000

